    <script src="~/js/common/fetchData.js" asp-append-version="true"></script>
    <script src="~/js/common/bootstrapHelper.js" asp-append-version="true"></script>
    <script src="~/js/common/mascaras.js" asp-append-version="true"></script>
    <script src="~/js/common/utils.js" asp-append-version="true"></script>
    <script src="~/js/common/fieldConverter.js" asp-append-version="true"></script>
    <script src="~/js/common/webStorageUtils.js" asp-append-version="true"></script>
    <script src="~/js/common/vue/vueBase.js" asp-append-version="true"></script>
    <script src="~/js/common/vue/vueReusaveis.js" asp-append-version="true"></script>
    <script src="~/js/common/mensagemSistema.js" asp-append-version="true"></script>

    <script src="~/js/app/layoutInit.js" asp-append-version="true"></script>
    <script src="~/pwa/appInstall.js" asp-append-version="true"></script>


    @Html.RenderVueScripts()

</body>
</html>
