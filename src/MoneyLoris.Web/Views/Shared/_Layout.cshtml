    <meta property="og:description" content="Money Loris - Finanças Pessoas de Boas">
    <meta property="og:url" content="https://www.moneyloris.com.br/">

    @* PWA config *@
    <link rel="manifest" href="/pwa/manifest.json" />
    <meta name="theme-color" content="#2E7D32" />
    <link rel="apple-touch-icon" href="/pwa/img/ios/192.png" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <script src="/sw-register.js" asp-append-version="true"></script>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">    
