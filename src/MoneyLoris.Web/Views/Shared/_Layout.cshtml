    <link rel="stylesheet" href="~/css/bs5-overrides.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />

    @Html.RenderVueStyles()

    @* lógica de tema claro/escuro no começo da página de propósito, para evitar flickering *@
    <script src="~/js/app/themeToggle.js" asp-append-version="true"></script>

</head>

<body translate="no">

    <partial name="_Antiforgery.cshtml" />

    <partial name="_Header.cshtml" />

    <main role="main" id="app">
        @RenderBody()
    </main>

    <div class="toast-container position-fixed bottom-0 start-0 p-2" style="z-index:1500;"></div>

    <div id="loading-splash" class="d-none">
        <div class="container">
            <i aria-hidden="true" class="fas fa-spinner"></i>
            <div class="message">Trabalhando nisso...</div>
        </div>
    </div>

    @Html.RenderVueTemplates()



    @* JS ao final do Body *@

    <!-- Eruda - console for mobile browsers - https://github.com/liriliri/eruda
    <script src="//cdn.jsdelivr.net/npm/eruda"></script>
    <script>eruda.init();</script>
    -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

