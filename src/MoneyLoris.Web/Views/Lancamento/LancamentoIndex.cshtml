        <div class="opcao-lancamento fg-lanc-pag-fatura bg-lanc-pag-fatura">
            <i class="fa-regular fa-credit-card"></i>
            <span>Pagamento de Fatura</span>
        </div>
    </div>
</div>


@using (Html.VueStyle())
{
    <style type="text/css">

        .btn-lancamento-lg {
        }

            .btn-lancamento-lg .btn {
                width: 16rem;
            }

                .btn-lancamento-lg .btn.dropdown-toggle::after {
                    color: var(--sys-color-dark-3);
                }

            .btn-lancamento-lg .dropdown-menu {
                width: 16rem;
                border-radius: 0;
            }

                .btn-lancamento-lg .dropdown-menu .dropdown-item {
                    display: flex;
                    align-items: center;
                    height: 3rem;
                    cursor: pointer;
                }

                    .btn-lancamento-lg .dropdown-menu .dropdown-item:active {
                        color: unset;
                        background-color: var(--bs-dropdown-link-hover-bg);
                    }

                    .btn-lancamento-lg .dropdown-menu .dropdown-item .icone {
                        width: 3.5rem;
                        text-align: center;
                        margin-left: -0.75rem;
                    }

                        .btn-lancamento-lg .dropdown-menu .dropdown-item .icone i {
                            font-size: 1.6rem;
                        }

                    .btn-lancamento-lg .dropdown-menu .dropdown-item .texto {
                        font-size: 1.15rem;
                        font-weight: 500;
                    }



        .filtro-rapido-opcao {
            margin: 0 0.25rem;
            padding: 0.25rem;
            min-width: 6rem;
            border: 1px solid var(--sys-color-dark-4);
            border-radius: 5px;
            color: var(--sys-color-dark-4);
            background-color: white;
            font-weight: bold;
            text-align: center;
            cursor: pointer;
        }


        .balanco-container {
            display: flex;
            flex-wrap: nowrap;
            justify-content: space-evenly;
        }

            .balanco-container .valor-rec {
                font-weight: bold;
                font-size: 1.25rem;
            }

            .balanco-container .valor-desp {
                font-weight: bold;
                font-size: 1.25rem;
            }

            .balanco-container .valor-saldo {
                font-weight: bold;
                font-size: 1.5rem;
            }

        @@media (max-width: 991px) { /*lg*/

            .balanco-container {
                justify-content: space-between;
            }

                .balanco-container .valor-rec {
                    font-size: 1rem;
                }

                .balanco-container .valor-desp {
                    font-size: 1rem;
                }

                .balanco-container .valor-saldo {
                    font-size: 1rem;
                }
        }



        .lancamento-container {
            display: grid;
            grid-template-columns: 7rem 15rem 18rem auto 8rem 4rem;
            grid-template-areas:
                "ga-data ga-conta ga-categoria ga-descricao ga-valor ga-opcoes";
            align-items: center;
        }

            .lancamento-container .data {
                grid-area: ga-data;
            }

            .lancamento-container .conta {
                grid-area: ga-conta;
                display: flex;
                align-items: center;
            }

            .lancamento-container .categoria {
                grid-area: ga-categoria;
            }

            .lancamento-container .descricao {
                grid-area: ga-descricao;
            }

            .lancamento-container .valor {
                grid-area: ga-valor;
                text-align: right;
            }

            .lancamento-container .opcoes {
                grid-area: ga-opcoes;
                text-align: end;
            }

        @@media (max-width: 991px) { /*lg*/

            .lancamento-container {
                grid-template-columns: 3rem auto 8rem;
                grid-template-areas:
                    "ga-data ga-descricao ga-valor"
                    "ga-data ga-categoria ga-conta"
            }

                .lancamento-container .data .data-mob {
                    display: flex;
                    flex-direction: column;
                    color: var(--sys-color-dark-1);
                    align-items: center;
                    margin: 0.1rem 0.5rem 0.1rem 0;
                }

                    .lancamento-container .data .data-mob .dia {
                        font-size: 1.5rem;
                        font-weight: bold;
                        line-height: 1.6rem;
                    }

                    .lancamento-container .data .data-mob .mes {
                        font-size: 0.65rem;
                        font-weight: bold;
                        line-height: 0.75rem;
                    }

                .lancamento-container .descricao {
                    font-weight: bold;
                }

                .lancamento-container .categoria {
                    font-size: 0.75rem;
                    font-style: italic;
                }

                .lancamento-container .valor {
                }

                .lancamento-container .conta {
                    justify-content: end;
                    font-size: 0.75rem;
                    font-weight: 500;
                    color: var(--sys-color-dark-1);
                }

                .lancamento-container .opcoes {
                    display: none;
                }
        }

        .barra-filtro-periodo {
            display: none;
        }

        @@media (max-width: 991px) { /*lg*/

            .barra-filtro-periodo {
                padding: 0.75rem 2rem;
                background-color: var(--sys-color-dark-4);
                display: flex;
                align-items: center;
                justify-content: space-between;
                font-size: 1.35rem;
                font-weight: 500;
                color: #fff;
                height: 3.25rem;
            }

                .barra-filtro-periodo i {
                    font-size: 1.5rem;
                }
        }

        .lancamento-rolagem {
            padding-top: 1rem;
            padding-bottom: 2rem;
        }

        @@media (max-width: 991px) { /*lg*/
            .lancamento-rolagem {
                padding-top: unset;
            }
        }


        .barra-bottom {
            position: fixed;
            bottom: 0;
            width: 100%;
            padding: 0.75rem 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fff;
            border-top: 1px solid #ccc;
        }

        .offcanvas-bottom {
            height: 16rem !important;
        }

            .offcanvas-bottom .opcao-lancamento {
                display: flex;
                flex-wrap: wrap;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                width: 50vw;
                cursor: pointer;
            }

                .offcanvas-bottom .opcao-lancamento i {
                    font-size: 2.5rem;
                    margin-top: 0.5rem;
                }

                .offcanvas-bottom .opcao-lancamento span {
                    font-size: 1rem;
                    font-weight: 500;
                }

    </style>
}