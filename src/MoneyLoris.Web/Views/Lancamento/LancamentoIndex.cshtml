</section>



<div class="barra-bottom d-lg-none">
    <div class="d-grid gap-2 col-10 mx-auto">
        <button class="btn btn-primary btn-lg" type="button" data-bs-toggle="offcanvas" href="#offcanvasLancOpt">
            <i class="fa-solid fa-plus fa-lg sys-fg-dark-3 me-1"></i>
            <span class="sys-fg-dark-3 fw-bold">Lançar</span>
        </button>
    </div>
</div>

<div class="offcanvas offcanvas-bottom" tabindex="-1" id="offcanvasLancOpt" aria-labelledby="offcanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasLabel">Novo Lançamento</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0 d-flex flex-wrap">
        <div class="opcao-lancamento fg-lanc-despesa bg-lanc-despesa">
