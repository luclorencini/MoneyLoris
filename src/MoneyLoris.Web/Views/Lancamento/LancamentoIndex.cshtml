<partial name="_LancamentoModal"></partial>
<partial name="_TransferenciaModal"></partial>

<section class="container-xxl container-titulo">
    <div class="area-titulo">
        <partial name="_BotaoVoltar"></partial>
        <div class="titulo">Lançamentos</div>
    </div>
    <div class="area-opcoes">

        <div class="input-group d-none d-lg-block btn-lancamento-lg">
            <button class="btn btn-primary btn-lg px-4 dropdown-toggle" data-bs-toggle="dropdown">
                <span class="sys-fg-dark-3 fw-bold me-2">Novo Lançamento</span>
            </button>
            <ul class="dropdown-menu">
                <li class="dropdown-item">
                    <div class="icone">
                        <i class="fa-solid fa-lg fa-file-invoice-dollar fg-lanc-despesa"></i>
                    </div>
                    <div class="texto">Despesa</div>
                </li>
                <li class="dropdown-item">
                    <div class="icone">
                        <i class="fa-solid fa-lg fa-hand-holding-dollar fg-lanc-receita"></i>
                    </div>
                    <div class="texto">Receita</div>
                </li>
                <li class="dropdown-item">
                    <div class="icone">
                        <i class="fa-solid fa-lg fa-money-bill-transfer fg-lanc-transferencia"></i>
                    </div>
                    <div class="texto">Transferência</div>
                </li>
                <li class="dropdown-item">
                    <div class="icone">
                        <i class="fa-regular fa-lg fa-credit-card fg-lanc-pag-fatura"></i>
                    </div>
                    <div class="texto">Pagamento de Fatura</div>
                </li>
            </ul>
        </div>

        <div class="d-lg-none me-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFiltro">
            <i class="fa-solid fa-filter fa-lg text-white"></i>
        </div>

    </div>
</section>

<!-- filtro mobile -->
<div class="barra-filtro-periodo">
    <i aria-hidden="true" class="fa-solid fa-chevron-left"></i>
    <span>Janeiro 2023</span>
    <i aria-hidden="true" class="fa-solid fa-chevron-right"></i>
</div>


<div class="offcanvas-lg offcanvas-end" tabindex="-1" id="offcanvasFiltro">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Opções de Filtro</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasFiltro" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">

        <div class="container-xxl">
            <div class="row g-1">

                <div class="col col-12 col-lg-4">
                    <label class="form-label lh-1">Descrição</label>
                    <input class="form-control form-control-sm" maxlength="40" placeholder="Procure lançamentos pela descrição">
                </div>

                <div class="col col-12 col-lg-3">
                    <label class="form-label lh-1">Período</label>
                    <div class="d-flex align-items-center">
                        <input class="form-control form-control-sm" type="date" value="2023-01-01">
                        <span class="mx-2">a</span>
                        <input class="form-control form-control-sm" type="date" value="2023-01-31">
                    </div>
                </div>

                <div class="col col-12 col-lg-2">
                    <label class="form-label lh-1">Conta / Cartão</label>
                    <select class="form-select form-select-sm">
                        <option></option>
                        <optgroup label="Contas">
                            <option value="2">Caixa</option>
                            <option value="3">PicPay</option>
                        </optgroup>
                        <optgroup label="Cartões">
                            <option value="1">Nubank</option>
                        </optgroup>
                    </select>
                </div>
                <div class="col col-12 col-lg-3">
                    <label class="form-label lh-1">Categoria / Subcategoria</label>
                    <select class="form-select form-select-sm">
                        <option></option>
                        <optgroup label="Receitas">
                            <option value="1">Salário</option>
                            <option value="2">Empréstimo</option>
                            <option value="3">Investimentos</option>
                        </optgroup>
                        <optgroup label="Despesas">
                            <option value="1">Alimentação</option>
                            <option value="11">Alimentação / Supermercado</option>
                            <option value="2">Moradia</option>
                            <option value="3">Poupança</option>
                        </optgroup>
                    </select>
                </div>

                <div class="col col-12 col-lg-4 d-flex align-items-center mt-3 mt-lg-0">
                    <label class="form-label me-2">Filtrar por:</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1" checked>
                        <label class="form-check-label" for="inlineCheckbox1"><small>Despesas</small></label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2" checked>
                        <label class="form-check-label" for="inlineCheckbox2"><small>Receitas</small></label>
                    </div>
                </div>
                <div class="col col-12 col-lg-4 d-flex align-items-center mt-3 mt-lg-0">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault"><small>Somar Transferências e Pag. Faturas</small></label>
                    </div>
                </div>
                <div class="col col-12 col-lg-4 d-flex align-items-end justify-content-end mt-2">
                    <button class="btn btn-sm btn-outline-secondary me-2" type="button">
                        <span>Limpar Filtro</span>
                    </button>
                    <button class="btn btn-sm btn-outline-primary" type="button">
                        <i class="fa-solid fa-magnifying-glass me-1"></i>
                        <span>Pesquisar</span>
                    </button>
                </div>

                <div class="col col-12 d-none d-lg-flex flex-wrap align-items-center mt-2">
                    <label class="me-2 fw-bold">Filtros rápidos:</label>
                    <div class="filtro-rapido-opcao">DEZ 22</div>
                    <div class="filtro-rapido-opcao">JAN 23</div>
                    <div class="filtro-rapido-opcao">FEV 23</div>
                    <div class="filtro-rapido-opcao">30 dias</div>
                    <div class="filtro-rapido-opcao">Semana</div>
                    <div class="filtro-rapido-opcao">Hoje</div>
                    <div class="filtro-rapido-opcao">Tudo</div>
                </div>

            </div>
        </div>


    </div>
</div>


