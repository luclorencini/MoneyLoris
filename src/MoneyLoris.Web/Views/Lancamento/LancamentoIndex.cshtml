<section class="container-xxl container-titulo">
    <partial name="_BotaoVoltar"></partial>
    <div class="titulo">Lançamentos</div>
</section>

<div class="barra-filtro-periodo">
    <i aria-hidden="true" class="fa-solid fa-chevron-left"></i>
    <span>Janeiro 2023</span>
    <i aria-hidden="true" class="fa-solid fa-chevron-right"></i>
</div>

<section class="container-xxl">

    <div class="card">
        <div class="card-body p-2">
            <div class="row g-0">

                <div class="col col-7 d-none d-lg-block ps-2">
                    <label class="form-label">Período</label>
                    <div class="lh-1 fw-bold fs-5">Dom, 1 Jan 2023 - Ter, 31 Jan 2023</div>
                </div>

                <div class="col col-12 col-lg-5">

                    <div class="balanco-container">

                        <div class="text-center">
                            <label class="form-label">Receitas</label>
                            <div class="lh-1 valor-rec din-receita">+ R$ 3.588,12</div>
                        </div>
                        <div class="text-center">
                            <label class="form-label">Despesas</label>
                            <div class="lh-1 valor-desp din-despesa">- R$ 820,61</div>
                        </div>
                        <div class="text-center">
                            <label class="form-label">Saldo</label>
                            <div class="lh-1 valor-saldo din-receita">+ R$ 2.767,51</div>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="list-group mt-2">

        <div class="list-group-item d-none d-lg-block">
            <div class="lancamento-container">
                <div class="data"><span class="fw-bold">Data</span></div>
                <div class="conta"><span class="fw-bold">Conta / Cartão</span></div>
                <div class="categoria"><span class="fw-bold">Categoria / Subcategoria</span></div>
                <div class="descricao"><span class="fw-bold">Descrição</span></div>
                <div class="valor"><span class="fw-bold">Valor</span></div>
                <div class="opcoes"></div>
            </div>
        </div>

        <div class="list-group-item sys-clicavel">
            <div class="lancamento-container">
                <div class="data">
                    <div class="d-none d-lg-block">27/01/2023</div>
                    <div class="d-lg-none data-mob">
                        <div class="dia">27</div>
                        <div class="mes">JAN</div>
                    </div>
                </div>
                <div class="conta">
                    <i class="fa-solid fa-xl fa-money-check-dollar me-2 d-none d-lg-block" style="color: #0369B9;"></i>
                    <span>Caixa</span>
                </div>
                <div class="categoria">Alimentação / Almoço</div>
                <div class="descricao">Marmita Praia</div>
                <div class="valor"><span class="fw-bold din-despesa">- R$ 318,00</span></div>
                <div class="opcoes">
                    <button type="button" class="btn sys-icon-button" title="Editar"><i aria-hidden="true" class="fa-solid fa-pen sys-fg-dark-2"></i></button>
                </div>
            </div>
        </div>

        <div class="list-group-item sys-clicavel">
            <div class="lancamento-container">
                <div class="data">
                    <div class="d-none d-lg-block">27/01/2023</div>
                    <div class="d-lg-none data-mob">
                        <div class="dia">27</div>
                        <div class="mes">JAN</div>
                    </div>
                </div>
                <div class="conta">
                    <i class="fa-solid fa-xl fa-credit-card me-2 d-none d-lg-block" style="color: #820AD1;"></i>
                    <span>Nubank</span>
                </div>
                <div class="categoria">Alimentação / Lanche</div>
                <div class="descricao">Mc Donald's</div>
                <div class="valor"><span class="fw-bold din-despesa">- R$ 49,50</span></div>
                <div class="opcoes">
                    <button type="button" class="btn sys-icon-button" title="Editar"><i aria-hidden="true" class="fa-solid fa-pen sys-fg-dark-2"></i></button>
                </div>
            </div>
        </div>

        <div class="list-group-item sys-clicavel">
            <div class="lancamento-container">
                <div class="data">
                    <div class="d-none d-lg-block">26/01/2023</div>
                    <div class="d-lg-none data-mob">
                        <div class="dia">26</div>
                        <div class="mes">JAN</div>
                    </div>
                </div>
                <div class="conta">
                    <i class="fa-solid fa-xl fa-money-check-dollar me-2 d-none d-lg-block" style="color: #11C56E;"></i>
                    <span>PicPay</span>
                </div>
                <div class="categoria">Repasse</div>
                <div class="descricao">Reembolso Jurandir</div>
                <div class="valor"><span class="fw-bold din-receita">R$ 275,00</span></div>
                <div class="opcoes">
                    <button type="button" class="btn sys-icon-button" title="Editar"><i aria-hidden="true" class="fa-solid fa-pen sys-fg-dark-2"></i></button>
                </div>
            </div>
        </div>

        <div class="list-group-item sys-clicavel">
            <div class="lancamento-container">
                <div class="data">
                    <div class="d-none d-lg-block">25/01/2023</div>
                    <div class="d-lg-none data-mob">
                        <div class="dia">25</div>
                        <div class="mes">JAN</div>
                    </div>
                </div>
                <div class="conta">
                    <i class="fa-solid fa-xl fa-money-check-dollar me-2 d-none d-lg-block" style="color: #FCF800;"></i>
                    <span>Banco do Brasil</span>
                </div>
                <div class="categoria">Assinaturas</div>
                <div class="descricao">Recarga Celular</div>
                <div class="valor"><span class="fw-bold din-despesa">- R$ 50,00</span></div>
                <div class="opcoes">
                    <button type="button" class="btn sys-icon-button" title="Editar"><i aria-hidden="true" class="fa-solid fa-pen sys-fg-dark-2"></i></button>
                </div>
            </div>
        </div>

    </div>

</section>

@using (Html.VueStyle())
{
    <style type="text/css">

        .balanco-container {
            display: flex;
            flex-wrap: nowrap;
            justify-content: space-evenly;
        }

            .balanco-container .valor-rec {
                font-weight: bold;
                font-size: 1.25rem;
            }

            .balanco-container .valor-desp {
                font-weight: bold;
                font-size: 1.25rem;
            }

            .balanco-container .valor-saldo {
                font-weight: bold;
                font-size: 1.5rem;
            }

        @@media (max-width: 991px) { /*lg*/

            .balanco-container {
                justify-content: space-between;
            }

            .balanco-container .valor-rec {
                font-size: 1rem;
            }

            .balanco-container .valor-desp {
                font-size: 1rem;
            }

            .balanco-container .valor-saldo {
                font-size: 1rem;
            }
        }



        .lancamento-container {
            display: grid;
            grid-template-columns: 7rem 15rem 18rem auto 8rem 4rem;
            grid-template-areas:
                "ga-data ga-conta ga-categoria ga-descricao ga-valor ga-opcoes";
            align-items: center;
        }

            .lancamento-container .data {
                grid-area: ga-data;
            }

            .lancamento-container .conta {
                grid-area: ga-conta;
                display: flex;
                align-items: center;
            }

            .lancamento-container .categoria {
                grid-area: ga-categoria;
            }

            .lancamento-container .descricao {
                grid-area: ga-descricao;
            }

            .lancamento-container .valor {
                grid-area: ga-valor;
                text-align: right;
            }

            .lancamento-container .opcoes {
                grid-area: ga-opcoes;
                text-align: end;
            }

        @@media (max-width: 991px) { /*lg*/

            .lancamento-container {
                grid-template-columns: 3rem auto 8rem;
                grid-template-areas:
                    "ga-data ga-descricao ga-valor"
                    "ga-data ga-categoria ga-conta"
            }

                .lancamento-container .data .data-mob {
                    display: flex;
                    flex-direction: column;
                    color: var(--sys-color-dark-1);
                    align-items: center;
                    margin: 0.1rem 0.5rem 0.1rem 0;
                }

                    .lancamento-container .data .data-mob .dia {
                        font-size: 1.5rem;
                        font-weight: bold;
                        line-height: 1.6rem;
                    }

                    .lancamento-container .data .data-mob .mes {
                        font-size: 0.65rem;
                        font-weight: bold;
                        line-height: 0.75rem;
                    }

                .lancamento-container .descricao {
                    font-weight: bold;
                }

                .lancamento-container .categoria {
                    font-size: 0.75rem;
                    font-style: italic;
                }

                .lancamento-container .valor {
                }

                .lancamento-container .conta {
                    justify-content: end;
                    font-size: 0.75rem;
                    font-weight: 500;
                    color: var(--sys-color-dark-1);
                }

                .lancamento-container .opcoes {
                    display: none;
                }
        }

        .barra-filtro-periodo {
            display: none;
        }

        @@media (max-width: 991px) { /*lg*/

            .barra-filtro-periodo {
                padding: 0.75rem 2rem;
                background-color: var(--sys-color-dark-4);
                display: flex;
                align-items: center;
                justify-content: space-between;
                font-size: 1.35rem;
                font-weight: 500;
                color: #fff;
                height: 3.25rem;
            }

                .barra-filtro-periodo i {
                    font-size: 1.5rem;
                }
        }

    </style>
}